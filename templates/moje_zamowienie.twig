{% extends 'parts/content.twig' %}

{% block title 'Moje zamówienia' %}

{% block container %}
    <div class="col-md-12">
        <div class="panel-group" id="accordion">
            {% for order in orders %}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <a data-toggle="collapse"
                               href="#collapse{{ order.order_id }}">
                                Data: {{ order.order_date }}<br>
                                Wartość zamówienia: {{ order.wartosc_zamowienia }} PLN<br>
                                Status: {{ config.status.order.status }}
                            </a>
                        </h4>
                    </div>
                    <div id="collapse{{ order.order_id }}"
                         class="panel-collapse collapse">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-6">
                                    Adres wysyłki:<br><br>
                                    {{ order.imie_nazwisko }}<br>
                                    {{ order.ulica }} {{ order.numer_domu }}<br>
                                    {{ order.kod_pocztowy }} {{ order.miasto }}<br>
                                    {{ order.numer_telefonu }}
                                </div>
                                <div class="col-md-6">
                                    Szczegóły:<br><br>

                                    {% for product in order.products %}
                                        Ilość sztuk:{{ product.quantity }} {{ product.name_ }}: {{ product.full_name }}
                                        <br>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}


